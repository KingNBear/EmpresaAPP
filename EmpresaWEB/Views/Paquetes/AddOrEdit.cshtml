@model EmpresaWEB.Models.mvcPaquete
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.PaqueteId)

        <div class="form-group">
            @Html.LabelFor(model => model.Titulo)
            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", placeholder = "Titulo" } })
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subtitulo)
            @Html.EditorFor(model => model.Subtitulo, new { htmlAttributes = new { @class = "form-control", placeholder = "Subtitulo" } })
            @Html.ValidationMessageFor(model => model.Subtitulo)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion)
            @Html.TextAreaFor(model => model.Descripcion, 10, 80, new { htmlAttributes = new { @class = "form-control", placeholder = "Descripcion" } })
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Restricciones)
            @Html.TextAreaFor(model => model.Restricciones, 10, 80, new { htmlAttributes = new { @class = "form-control", placeholder = "Restricciones" } })
            @Html.ValidationMessageFor(model => model.Restricciones)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaInicio)
            @Html.TextBoxFor(model => model.FechaInicio, "{0:dd-MM-yyyy}", new { @class = "form-control", @type = "date", Value=System.DateTime.Now })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaFin)
            @Html.TextBoxFor(model => model.FechaFin, "{0:dd-MM-yyyy}", new { @class = "form-control", @type = "date", Value=System.DateTime.Now })
            @Html.ValidationMessageFor(model => model.FechaFin)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado)
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Disponible",
                    Value = "Disponible",
                    Selected = true
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Ocupado",
                    Value = "Ocupado"
                });
            }
            @Html.DropDownListFor(model => model.Estado, listItems, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Estado)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />
        </div>
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
    
}

