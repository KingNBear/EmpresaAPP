@model EmpresaWEB.Models.mvcReserva
@{
    ViewBag.Title = "AddOrEdit";
}

<head>
    <!-- jQuery UI CSS Reference -->
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <!-- Required jQuery and jQuery UI Javascript references -->


</head>

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.ReservaId)

        <div class="form-group">
            @Html.LabelFor(model => model.PaqueteId, "Paquete")
            @Html.DropDownListFor(model => model.PaqueteId, new SelectList(Model.PaqueteCollection, "PaqueteId", "Titulo"), new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UsuarioId, "Usuario")
            @Html.DropDownListFor(model => model.UsuarioId, new SelectList(Model.UsuarioCollection, "UsuarioId", "Nombre"), new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaRegistro)
            @Html.TextBoxFor(model => model.FechaRegistro, "{0:d}", new { @class = "form-control datepicker"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaPago)
            @if (Model.FechaPago == null)
            {
                @Html.TextBoxFor(model => model.FechaPago, "{0:d}", new { @class = "form-control datepicker2"})
            }
            else
            {
                @Html.TextBoxFor(model => model.FechaPago, "{0:d}", new { @class = "form-control datepicker" })
            }


        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado)
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "No Pagado",
                    Value = "No Pagado",
                    Selected = true
                }); 
                listItems.Add(new SelectListItem
                {
                    Text = "Pagado",
                    Value = "Pagado"
                });
            }
            @Html.DropDownListFor(model => model.Estado, listItems, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Estado)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />
        </div>
    }
</div>

@section Scripts {
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">

        $('.datepicker').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-30:+10"            
        });

        $('.datepicker2').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-30:+10"            
        }).val(' ');

                
    </script>
}
